<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_category"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/roundcorner2" />

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_color"
        app:layout_constraintTop_toTopOf="@+id/imageView_category"
        app:srcCompat="@drawable/ic_wifi" />

    <ImageView
        android:id="@+id/imageView_color"
        android:layout_width="12dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_category"
        app:layout_constraintStart_toStartOf="@+id/imageView_category"
        app:layout_constraintTop_toTopOf="@+id/imageView_category"
        app:srcCompat="@drawable/roundcorner" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Wifi"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_icon"
        app:layout_constraintStart_toEndOf="@+id/imageView_icon"
        app:layout_constraintTop_toTopOf="@+id/imageView_icon" />

    <TextView
        android:id="@+id/tv_category_total_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="-R$120,56"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_category_name"
        app:layout_constraintEnd_toEndOf="@+id/imageView_category"
        app:layout_constraintTop_toTopOf="@+id/tv_category_name" />


</androidx.constraintlayout.widget.ConstraintLayout>